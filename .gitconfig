; -*- conf -*-

[user]
  email = "42812654+WGUNDERWOOD@users.noreply.github.com"
  name = "William G Underwood"

[core]
  editor = nvim
  pager = diff-so-fancy | less --tabs=4 -RFX

[alias]
  ad = "add"
  br = "branch"
  ci = "commit -v"
  co = "checkout"
  di = "diff"
  dipdf = "difftool --tool diffpdf"
  din = "diff --name-only"
  dic = "diff --compact-summary"
  dis = "diff --staged"
  fe = "fetch --all"
  hi = "log --graph --full-history --all --pretty=format:'%Cred%h%Creset %Cblue%ah%Creset %s %C(yellow)%d%Creset %C(bold blue)<%an>%Creset'"
  lg = "log --graph --pretty=format:'%Cred%h%Creset %Cblue%ah%Creset %s %C(yellow)%d%Creset %C(bold blue)<%an>%Creset'"
  me = "merge"
  pl = "pull"
  ps = "push"
  re = "rebase"
  st = "status"
  t = "log --tags --simplify-by-decoration --pretty=format:'%Cred%h%Creset %Cblue%ad%Creset %s %C(yellow)%d%Creset %C(bold blue)<%an>%Creset' --date=format:'%Y-%m-%d %H:%M:%S' --date=iso"
  tree = "ls-tree -r --name-only"
  tr = "tree"
  unstage = "reset HEAD --"
  un = "unstage"

[diff]
  tool = vimdiff

[credential]
  helper = cache --timeout=3600

[difftool "diffpdf"]
  cmd = diffpdf "$LOCAL" "$REMOTE"

[pull]
  rebase = false

[credential "https://git.overleaf.com"]
  helper = store

[init]
  defaultBranch = main

[color]
    ui = true

[color "diff-highlight"]
    oldNormal = "red bold"
    oldHighlight = "red bold 52"
    newNormal = "green bold"
    newHighlight = "green bold 52"

[color "diff"]
    meta = "yellow"
    frag = "magenta bold"
    commit = "yellow bold"
    old = "red bold"
    new = "green bold"
    whitespace = "red reverse"
